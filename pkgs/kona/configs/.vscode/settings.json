{
    // inline coverage after running tests
    "coverage-gutters.lcovname": "${workspaceRoot}/tmp/reports/lcov.info",
    // runs prettier
    "editor.formatOnSave": true,
    // eslint
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    // tslint
    "tslint.enable": false
}
